{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "alias.json",
  "title": "Alias",
  "description": "A token that references another token.",
  "type": "object",
  "allOf": [
    {
      "$ref": "token.json"
    }
  ],
  "properties": {
    "$schema": {
      "const": "alias.json"
    },
    "value": {
      "type": "string",
      "pattern": "^\\{(\\w|-)*\\}$"
    },
    "component": {},
    "private": {},
    "deprecated": {},
    "deprecated_comment": {},
    "uuid": {}
  }
}
