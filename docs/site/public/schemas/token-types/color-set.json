{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "color-set.json",
  "title": "Color set",
  "description": "A set that contains color values that change based on color theme.",
  "type": "object",
  "allOf": [
    {
      "$ref": "set.json"
    }
  ],
  "properties": {
    "$schema": {
      "const": "color-set.json"
    },
    "sets": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "light": {
              "$ref": "color.json"
            },
            "dark": {
              "$ref": "color.json"
            },
            "wireframe": {
              "$ref": "color.json"
            }
          },
          "required": ["light", "dark", "wireframe"]
        },
        {
          "properties": {
            "light": {
              "$ref": "alias.json"
            },
            "dark": {
              "$ref": "alias.json"
            },
            "wireframe": {
              "$ref": "alias.json"
            }
          },
          "required": ["light", "dark", "wireframe"]
        },
        {
          "properties": {
            "light": {
              "$ref": "opacity.json"
            },
            "dark": {
              "$ref": "opacity.json"
            },
            "wireframe": {
              "$ref": "opacity.json"
            }
          },
          "required": ["light", "dark", "wireframe"]
        }
      ]
    },
    "component": {},
    "private": {},
    "deprecated": {},
    "deprecated_comment": {},
    "uuid": {}
  },
  "required": ["sets"]
}
